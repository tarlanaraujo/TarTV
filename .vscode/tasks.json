{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter: Get Dependencies",
			"type": "shell",
			"command": "flutter",
			"args": [
				"pub",
				"get"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Flutter: Build APK",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--release"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Flutter: Run Debug",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--debug"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}